generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Staff {
  id     String      @id @default(cuid())
  pseudo String
  names  String
  role   String
  pole   String
  areas  StaffArea[]
}

model Area {
  id    Int         @id @default(autoincrement())
  label String
  staff StaffArea[]
}

model StaffArea {
  staffId String
  areaId  Int
  staff   Staff  @relation(fields: [staffId], references: [id])
  area    Area   @relation(fields: [areaId], references: [id])

  @@id([staffId, areaId])
}
